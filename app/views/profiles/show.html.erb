     locals: {
       mode: :show,

       fields: {
         main_topic: valuelabel(@profile.main_topic_or_first_topic),
         topics_main_topic: valuelabel(@profile.main_topic_or_first_topic),
         city: valuelabel(@profile.city),
         twitter: valuelabel(@profile.twitter),
         website: valuelabel(@profile.website),
